<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bb42.jinawa"
    android:versionCode="4"
    android:versionName="1.001" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:name="@string/app_name"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:restoreAnyVersion="true"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="de.bb42.jinawa.view.SlideScreenStaples"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SlideScreenPapers"
            android:label="@string/Papers" >
        </activity>
        <activity
            android:name=".view.Writer"
            android:label="@string/Writer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.Settings"
            android:label="@string/Settings"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>